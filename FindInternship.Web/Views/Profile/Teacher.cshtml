@using FindInternship.Core.Models.Profile;
@model TeacherProfileViewModel;


<div class="container emp-profile">
    <div class="row" style="height: 190px">
        <div class="col-md-4">
            <div class="profile-img">
                <img src="@Model.ProfilePictureUrl" alt="" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="profile-head">
                <h5>
                    @Model.Name;
                </h5>
                <h6>
                    Учител
                </h6>
                <br />
                <br />
                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">About</a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="col-md-2">
            <a asp-controller="Profile" asp-action="Edit" asp-route-userId="@Model.Id" class="profile-edit-btn" name="btnAddMore">Промени</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <div class="tab-content profile-tab" id="myTabContent">
                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab" style="padding-left:200px">
                    <div class="row">
                        <div class="col-md-6">
                            <label>Име</label>
                        </div>
                        <div class="col-md-6">
                            <p>@Model.Name</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>Имейл</label>
                        </div>
                        <div class="col-md-6">
                            <p>@Model.Email</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>Телефонен номер</label>
                        </div>
                        <div class="col-md-6">
                            <p>@Model.PhoneNumber</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>Адрес</label>
                        </div>
                        <div class="col-md-6">
                            <p>@Model.Address</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>Град</label>
                        </div>
                        <div class="col-md-6">
                            <p>@Model.City</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>Държава</label>
                        </div>
                        <div class="col-md-6">
                            <p>@Model.Country</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles{
    <link rel="stylesheet" href="~/css/teacher.css" />

 }

