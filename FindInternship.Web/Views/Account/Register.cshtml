@using FindInternship.Core.Models.Account;
@model RegisterViewModel



@{
    var date = new DateOnly(DateTime.Now.Year - 14, 1, 1);
    ViewData["Title"] = "Регистрация за ученик";
}

<div class="form-body">
    <div class="row">
        <div class="form-holder">
            <div class="form-content">
                <div class="form-items">
                    <form class="requires-validation" id="registerForm" method="post" enctype="multipart/form-data">
                        <h2 class="text-center mt-2"><strong>@ViewData["Title"]</strong></h2>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="picture-holder mt-4 mb-3">
                            <div class="img-container">
                                <img id="preview_img" class="img-holder" src="~/img/blank-profile-picture.png"
                                     alt="Current profile photo" />
                            </div>
                            <div style="padding-left:2rem ;">
                                <div class="button_outer">
                                    <div class="btn_upload">
                                        <input asp-for="ProfilePicture" accept="image/gif, image/jpeg, image/png" id="upload_file">
                                        Upload Image
                                    </div>

                                </div>
                            </div>

                        </div>

                        <div class="form-group">
                            <input asp-for="Email" class="form-control" placeholder="Имейл">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Name" class="form-control" placeholder="Име">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Password" class="form-control" placeholder="Парола">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="PasswordRepeat" class="form-control" placeholder="Повтори паролата">
                            <span asp-validation-for="PasswordRepeat" class="text-danger"></span>
                        </div>
                        <div class="d-md-flex justify-content-start align-items-center mb-4 py-2">

                            <h6 class="mb-0 me-4">Пол: </h6>

                            <div class="form-check form-check-inline mb-0 me-4">
                                <input asp-for="@Model.Gender" value="Мъж" class="form-check-input text-dark" type="radio" name="Gender" id="maleGender"
                                       />
                                <label class="form-check-label text-dark" for="maleGender">Мъж</label>
                            </div>

                            <div class="form-check form-check-inline mb-0 me-4">
                                <input asp-for="@Model.Gender" value="Жена" class="form-check-input text-dark" type="radio" name="Gender" id="femaleGender"
                                       />
                                <label class="form-check-label text-dark" for="femaleGender">Жена</label>
                            </div>

                        </div>
                        <div class="form-group">
                            <select asp-for="@Model.ClassId" class="form-control" value="Клас" aria-required="true">
                                @foreach (var c in Model.Classes)
                                {
                                    <option value="@c.Id">@c.Name (@c.School)</option>
                                }
                            </select>
                            <span asp-validation-for="@Model.ClassId" class="text-danger"></span>
                        </div>
                       
                        <div class="form-group" style="margin: 12px 0px 12px 0px;">
                            <select asp-for="AbilitiesIds" data-placeholder="Твоите знания" multiple class="form-control chosen-select choices-multiple-remove-button">
                                @foreach (var a in Model.Abilities)
                                {
                                    <option value="@a.Id">@a.AbilityText</option>
                                }
                            </select>
                        </div>
                        <div class="from-group">
                            <input asp-for="BirthDate" type="date" class="form-control" placeholder="Дата на раждане" value="@date" />
                            <span asp-validation-for="BirthDate" class="text-danger" ></span>

                        </div>
                        <div class="form-group">
                            <input asp-for="PhoneNumber" class="form-control" placeholder="Телефон">
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Address" class="form-control" placeholder="Адрес">
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="City" class="form-control" placeholder="Град">
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Country" class="form-control" placeholder="Държава">
                            <span asp-validation-for="Country" class="text-danger"></span>
                        </div>
                        
                       @*  <div class="form-group">
                            <label for="profilePicture">Качи профилна снимка</label>
                            <input asp-for="ProfilePicture" accept="image/gif, image/jpeg, image/png" class="text-white" id="profilePicture">
                            <span asp-validation-for="ProfilePicture" class="text-danger"></span>
                        </div>
                        <div class="form-group" style="text-shadow: 1px 1px black;">
                            <img alt="Uploaded Image" placeholder="Upload Profile Picture" accept="image/gif, image/jpeg, image/png" style="display:none;">
                        </div> *@
                        <div class="form-group mt-3">
                            <button class="btn btn-primary btn-block" type="submit">Регистрирай</button>
                        </div>
                        <br>
                        <a asp-controller="Account" asp-action="Login" class="already">Вече имате акаунт? <b>Влезте тук.</b></a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdn.rawgit.com/harvesthq/chosen/gh-pages/chosen.jquery.min.js" asp-append-version="true"></script>
    <script src="~/js/register.js" asp-append-version="true"></script>
}

@section Styles{
    <link href="https://cdn.rawgit.com/harvesthq/chosen/gh-pages/chosen.min.css" rel="stylesheet" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/register.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/uploadImage.css" asp-append-version="true"/>
}
