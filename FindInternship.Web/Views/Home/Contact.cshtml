@using FindInternship.Core.Models.Email;
@model Message


<section id="contact" class="contact">
    <div class="container" style="margin-top: 0px" data-aos="fade-up">

        <div class="section-title">
            <h2 class="text-dark">Contact</h2>
            <p>Contact Us</p>
        </div>

        <div>
            <iframe style="border:0; width: 100%; height: 270px;" src="https://maps.google.com/maps?q=Казанлък&t=&z=10&ie=UTF8&iwloc=&output=embed" frameborder="0" allowfullscreen></iframe>
        </div>

        <div class="row mt-5">

            <div class="col-lg-4">
                <div class="info">
                    <div class="address">
                        <i class="fa-solid fa-location-dot" style="color: #000000;"></i>
                        <h4>Местоположение:</h4>
                        <p>Казанлък, България</p>
                    </div>

                    <div class="email">
                        <i class="fa-regular fa-envelope" style="color: #000000;"></i>
                        <h4>Имейл:</h4>
                        <p>findInternship@abv.bg</p>
                    </div>

                    <div class="phone">
                        <i class="fa-regular fa-phone" style="color: #000000;"></i>
                        <h4>Телефон:</h4>
                        <p>088 986 4842</p>
                    </div>

                </div>

            </div>

            <div class="col-lg-8 mt-5 mt-lg-0">

                <form method="post" role="form" class="php-email-form">
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <input asp-for="@Model.Name" type="text" class="form-control" id="name" placeholder="Име" required>
                        </div>
                        <div class="col-md-6 form-group mt-3 mt-md-0">
                            <input asp-for="@Model.From" type="email" class="form-control" id="email" placeholder="Имейл" required>
                        </div>
                    </div>
                    <div class="form-group mt-3">
                        <input asp-for="@Model.Subject" type="text" class="form-control" id="subject" placeholder="Тема" required>
                    </div>
                    <div class="form-group mt-3">
                        <textarea asp-for="@Model.Content" type="text" class="form-control" rows="5" placeholder="Съобщение" required></textarea>
                    </div>
                    <div class="text-center"><button type="submit">Send Message</button></div>
                </form>

            </div>

        </div>

    </div>

</section>

@section Styles{
    <link rel="stylesheet" href="~/css/contact.css" asp-append-version="true" />
}

