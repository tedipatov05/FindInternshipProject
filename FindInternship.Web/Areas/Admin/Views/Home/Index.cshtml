<div class="main-container">
    <div class="main">
        <div class="box-container">

            <div class="box box1">
                <div class="text">
                    <h2 class="topic-heading counter" data-to="1000" data-speed="2000">60</h2>
                    <h2 class="topic">Article Views</h2>
                </div>

                <img src="~/img/eyeIcon.png" alt="Views">
            </div>

            <div class="box box2">
                <div class="text">
                    <h2 class="topic-heading counter" data-to="1000" data-speed="2000">150</h2>
                    <h2 class="topic">Likes</h2>
                </div>

                <img src="~/img/likeIcon.png" alt="likes">
            </div>

            <div class="box box3">
                <div class="text">
                    <h2 class="topic-heading counter" data-to="1000" data-speed="2000">320</h2>
                    <h2 class="topic">Comments</h2>
                </div>

                <img src="~/img/messageIcon.png" alt="comments">
            </div>

            <div class="box box4">
                <div class="text">
                    <h2 class="topic-heading counter" data-to="1000" data-speed="2000">70</h2>
                    <h2 class="topic">Published</h2>
                </div>

                <img src="~/img/checkIcon.png" alt="published">
            </div>
        </div>

        <div class="report-container">
            <div class="report-header">
                <h1 class="recent-Articles">Recent Articles</h1>
                <div class="searchbar">
                    <input type="text" placeholder="Search">
                    <div class="searchbtn">
                        <img src="~/img/searchIcon.png" class="icn srchicn" alt="search-icon">
                    </div>
                </div>
            </div>

            <div class="report-body">
                <div class="report-topic-heading">
                    <h3 class="t-op">Снимка</h3>
                    <h3 class="t-op">Име</h3>
                    <h3 class="t-op">Имейл</h3>
                    <h3 class="t-op">Роля</h3>
                    <h3 class="t-op">Действия</h3>
                </div>

                <div class="items">
                    <div class="item1" style="margin-bottom: 10px;">
                        <div class="media-left">
                            <img src="~/img/blank-profile-picture.png"
                                 class="rounded-circle shadow avatar-md mr-3" alt="Profile Picture">
                        </div>
                        <h3 class="t-op-nextlvl ml-40">Иван</h3>
                        <h3 class="t-op-nextlvl ml-40">ivan@abv.bg</h3>
                        <h3 class="t-op-nextlvl ml-40">Учител</h3>
                        <div style="display: flex; flex-direction: column;">
                            <a class="t-op-nextlvl label-tag" style="text-decoration: none; margin-bottom: 10px;">Published</a>
                            <a class="t-op-nextlvl label-tag-delete" style="text-decoration: none;">Delete</a>


                        </div>
                    </div>
                    <hr>
                    <div class="item1" style="margin-bottom: 10px;">
                        <div class="media-left">
                            <img src="~/img/blank-profile-picture.png"
                                 class="rounded-circle shadow avatar-md mr-3" alt="Profile Picture">
                        </div>
                        <h3 class="t-op-nextlvl ml-40">Иван</h3>
                        <h3 class="t-op-nextlvl ml-40">ivan@abv.bg</h3>
                        <h3 class="t-op-nextlvl ml-40">Учител</h3>
                        <div style="display: flex; flex-direction: column;">
                            <a class="t-op-nextlvl label-tag" style="text-decoration: none; margin-bottom: 10px;">Published</a>
                            <a class="t-op-nextlvl label-tag-delete" style="text-decoration: none;">Delete</a>


                        </div>
                    </div>
                    <hr>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles{
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/adminResponsive.css" asp-append-version="true" />
}

@section Scripts{
    <script src="~/js/site.js" asp-append-version="true"></script>
}
                           